                            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.HighlightColorKey}}"/>
                        </Label.Foreground>
                    </Label>
                    <StackPanel Orientation="Horizontal">
                        <ui:Button x:Name="ListViewFontColorButton" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,1,5,0" Icon="{ui:SymbolIcon Color24}" Padding="-10" Click="ListViewFontColorButton_Click">
                            <ui:Button.Foreground>
                                <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFFF5A5A"/>
                                    <GradientStop Color="#FF5A5AFF" Offset="0.8"/>
                                    <GradientStop Color="#FF5AFF5A" Offset="0.4"/>
                                </LinearGradientBrush>
                            </ui:Button.Foreground>
                        </ui:Button>
                        <Label Content="{x:Static prop:Lang.FrameSettings_TextColor}" Height="30"/>
                    </StackPanel>

                    <Grid>
                        <Rectangle  Width="20" Height="20" RadiusX="5"   IsHitTestVisible="False" Panel.ZIndex="2" RadiusY="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,16,0">
                            <Rectangle.Fill>
                                <VisualBrush Stretch="Uniform" TileMode="Tile" Viewport="0,0,8,8" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" >
                                    <VisualBrush.Visual>
                                        <Canvas Width="8" Height="8">
                                            <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="0" Canvas.Top="0"/>
                                            <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="4" Canvas.Top="0"/>
                                            <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="0" Canvas.Top="4"/>
                                            <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="4" Canvas.Top="4"/>
                                        </Canvas>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Rectangle.Fill>
                        </Rectangle>

                        <Rectangle Width="20" Height="20" RadiusX="5" RadiusY="5" Panel.ZIndex="4344"
                               Fill="{Binding Foreground, ElementName=ListViewFontColorTextBoxIcon}" 
                               HorizontalAlignment="Right" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,7,16,0"/>

                        <ui:TextBox x:Name="ListViewFontColorTextBox" PlaceholderText="#FFFFFF" Margin="0,0,0,20" IconPlacement="Right" TextChanged="TextChangedHandler">
                            <ui:TextBox.Icon>
                                <ui:SymbolIcon Symbol="Square20" Filled="True" FontSize="30" 
                                        x:Name="ListViewFontColorTextBoxIcon" 
                                        Cursor="Hand"
                                        MouseUp="ListViewFontColorTextBoxIcon_MouseUp" />
                            </ui:TextBox.Icon>
                        </ui:TextBox>
                    </Grid>


                    <StackPanel Orientation="Horizontal">
                        <ui:Button x:Name="ListViewFontShadowColorButton" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,1,5,0" Icon="{ui:SymbolIcon Color24}" Padding="-10" Click="ListViewFontShadowColorButton_Click">
                            <ui:Button.Foreground>
                                <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFFF5A5A"/>
                                    <GradientStop Color="#FF5A5AFF" Offset="0.8"/>
                                    <GradientStop Color="#FF5AFF5A" Offset="0.4"/>
                                </LinearGradientBrush>
                            </ui:Button.Foreground>
                        </ui:Button>
                        <Label Content="{x:Static prop:Lang.FrameSettings_TextShadowColor}" Height="30"/>
                    </StackPanel>

                    <Grid>
                        <Rectangle  Width="20" Height="20" RadiusX="5"   IsHitTestVisible="False" Panel.ZIndex="2" RadiusY="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,16,0">
                            <Rectangle.Fill>
                                <VisualBrush Stretch="Uniform" TileMode="Tile" Viewport="0,0,8,8" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" >
                                    <VisualBrush.Visual>
                                        <Canvas Width="8" Height="8">
                                            <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="0" Canvas.Top="0"/>
                                            <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="4" Canvas.Top="0"/>
                                            <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="0" Canvas.Top="4"/>
                                            <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="4" Canvas.Top="4"/>
                                        </Canvas>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Rectangle.Fill>
                        </Rectangle>

                        <Rectangle Width="20" Height="20" RadiusX="5" RadiusY="5" Panel.ZIndex="4344"
                               Fill="{Binding Foreground, ElementName=ListViewFontShadowColorTextBoxIcon}" 
                               HorizontalAlignment="Right" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,7,16,0"/>

                        <ui:TextBox x:Name="ListViewFontShadowColorTextBox" PlaceholderText="#000000" Margin="0,0,0,20"  IconPlacement="Right" TextChanged="TextChangedHandler">
                            <ui:TextBox.Icon>
                                <ui:SymbolIcon Symbol="Square20" Filled="True" FontSize="30" 
                                       x:Name="ListViewFontShadowColorTextBoxIcon" 
                                       Cursor="Hand"
                                       MouseUp="ListViewFontShadowColorTextBoxIcon_MouseUp" />
                            </ui:TextBox.Icon>
                        </ui:TextBox>
                    </Grid>

                    <Label Content="{x:Static prop:Lang.FrameSettings_ShowFilesRegex}" Height="30" />
                    <ui:TextBox x:Name="FileFilterRegexTextBox" Margin="0,0,0,20" TextChanged="TextChangedHandler"/>

                    <Label Content="{x:Static prop:Lang.FrameSettings_HideFilesRegex}" Height="30"/>
                    <ui:TextBox x:Name="FileFilterHideRegexTextBox" Margin="0,0,0,20" TextChanged="TextChangedHandler"/>

                    <Label Content="{x:Static prop:Lang.FrameSettings_Font}" Height="30"/>
                    <ui:AutoSuggestBox x:Name="ItemTextAutoSuggestionBox"
                                   OriginalItemsSource="{Binding FontList}"
                                   PlaceholderText="{x:Static prop:Lang.FrameSettings_Searchdot}" Margin="0,0,0,20"/>

                    <CheckBox x:Name="ShowDisplayNameCheckBox" Content="{x:Static prop:Lang.FrameSettings_ShowIconText}" Margin="-11,0,0,0" Checked="ShowDisplayNameCheckBox_Checked" Unchecked="ShowDisplayNameCheckBox_Checked"/>
                    <CheckBox x:Name="ShowShortcutArrowCheckBox" Margin="-11,0,0,0" Checked="ShowShortcutArrowCheckBox_Checked" Unchecked="ShowShortcutArrowCheckBox_Unchecked">
                        <TextBlock Text="{x:Static prop:Lang.FrameSettings_ShowShortcutArrow}" TextWrapping="Wrap"/>
                    </CheckBox>
                    <CheckBox x:Name="ShowLastAccessedToFirstRowCheckBox" Margin="-11,0,0,0" Checked="ShowLastAccessedToFirstRowCheckBox_Checked" Unchecked="ShowLastAccessedToFirstRowCheckBox_Unchecked">
                        <TextBlock Text="{x:Static prop:Lang.FrameSettings_ShowLastAccessedItem}" TextWrapping="Wrap"/>
                    </CheckBox>

                    <StackPanel Orientation="Horizontal">
                        <Label Content="{x:Static prop:Lang.FrameSettings_IconSize}" Height="30" Margin="0,20,0,0"/>
                        <Label x:Name="IconSizeLabel" Content="0%" Height="30" Margin="5,20,0,0" Foreground="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" FontWeight="Bold"/>
                    </StackPanel>
                    <Slider x:Name="IconSizeSlider" Width="200" TickPlacement="TopLeft" TickFrequency="1" Minimum="1" Maximum="64" ValueChanged="Slider_ValueChanged" IsSnapToTickEnabled="True"/>


                    <CheckBox x:Name="GrayScaleEnabled_CheckBox"
                       Checked="GrayScaleEnabled_CheckBox_Checked"
                       Unchecked="GrayScaleEnabled_CheckBox_Checked"
                       Margin="-11,20,0,0" >
                        <TextBlock Text="{x:Static prop:Lang.FrameSettings_GrayscaleEnable}" TextWrapping="Wrap"/>
                    </CheckBox>

                    <CheckBox x:Name="GrayScaleEnabled_InactiveOnly_CheckBox"
                          Checked="GrayScaleEnabled_InactiveOnly_CheckBox_Checked"
                          Unchecked="GrayScaleEnabled_InactiveOnly_CheckBox_Checked"
                          Margin="14,0,0,0"
                          Visibility="Collapsed">
                        <TextBlock Text="{x:Static prop:Lang.FrameSettings_GrayScaleEnabledInactiveOnly}" TextWrapping="Wrap"/>
                    </CheckBox>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Label Content="{x:Static prop:Lang.FrameSettings_GrayScaleMaxLevel}" Height="30" Margin="0,0,0,0"/>
                        <Label x:Name="MaxGrayScaleStrengthLabel"
                           Content="0%" 
                           ContentStringFormat="F1" Height="30" Margin="5,00,0,0"
                           Foreground="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" 
                           FontWeight="Bold"/>
                    </StackPanel>

                    <Slider x:Name="MaxGrayScaleStrengthSlider" 
                        Width="200" TickPlacement="TopLeft"
                        TickFrequency="1" Minimum="0" Maximum="10"
                        ValueChanged="MaxGrayScaleStrengthSlider_ValueChanged"
                        IsSnapToTickEnabled="True"/>

                </StackPanel>
                <Separator HorizontalAlignment="Center"  Grid.Column="5" Margin="0,20,0,20"/>
                <StackPanel Orientation="Vertical" Margin="10,10,10,0" Grid.Column="6">
                    <Label Content="{x:Static prop:Lang.FrameSettings_CategoryWindow}" Margin="0,0,0,20" Height="50"  FontWeight="Bold" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" >
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.HighlightColorKey}}"/>
                        </Label.Foreground>
                    </Label>

                    <Border CornerRadius="8" BorderThickness="2" Padding="10,10,10,0" Margin="-10,-12,-10,10"  BorderBrush="#19C5C5C5">
                       
                        <Border.Background>
                            <LinearGradientBrush EndPoint="1,1" StartPoint="1,0">
                                <GradientStop Color="#05FFFFFF" Offset="0.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                       
                        <StackPanel>

                            <Label Content="{x:Static prop:Lang.FrameSettings_PositionX}" Height="30"/>

                            <ui:NumberBox x:Name="PositionX_NumberBox"                             
                                          SpinButtonPlacementMode="Inline"
                                          Value="{Binding PosX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Margin="0,0,0,20"
                                          ValueChanged="ChangePosition"/>

                            <Label Content="{x:Static prop:Lang.FrameSettings_PositionY}" Height="30"/>

                            <ui:NumberBox x:Name="PositionY_NumberBox" 
                                          Margin="0,0,0,20"   
                                          SpinButtonPlacementMode="Inline"
                                          Value="{Binding PosY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          ValueChanged="ChangePosition"/>

                        </StackPanel>
                    </Border>

                    <Border CornerRadius="8" BorderThickness="2"  Padding="10,10,10,0" Margin="-10,10,-10,10"   BorderBrush="#19C5C5C5">

                        <Border.Background>
                            <LinearGradientBrush EndPoint="1,1" StartPoint="1,0">
                                <GradientStop Color="#05FFFFFF" Offset="0.0"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <StackPanel>

                            <Label Content="{x:Static prop:Lang.FrameSettings_FrameWidth}" Height="30"/>

                            <ui:NumberBox x:Name="FrameWidth_NumberBox"                             
                                          SpinButtonPlacementMode="Inline"
                                          Value="{Binding Width, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Margin="0,0,0,20"
                                          ValueChanged="ChangePosition"/>
                            
                            <Label Content="{x:Static prop:Lang.FrameSettings_FrameHeight}" Height="30"/>

                            <ui:NumberBox x:Name="FrameHeight_NumberBox" 
                                          Margin="0,0,0,20"   
                                          SpinButtonPlacementMode="Inline"
                                          Value="{Binding Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          ValueChanged="ChangePosition"/>

                        </StackPanel>
                    </Border>

                    
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{x:Static prop:Lang.FrameSettings_IdleOpacityLabel}" Height="30" Margin="0,20,0,0"/>
                        <Label x:Name="IdleOpacityLabel" Content="0%" Height="30" Margin="5,20,0,0" Foreground="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" FontWeight="Bold"/>
                    </StackPanel>
                    <Slider x:Name="IdleOpacitySlider" Width="200" TickPlacement="TopLeft" TickFrequency="1" Minimum="1" Maximum="10" ValueChanged="Slider_ValueChanged" IsSnapToTickEnabled="True"/>

                    <CheckBox x:Name="AutoExpandonCursorCheckBox" Margin="-11,15,0,0" Checked="AutoExpandonCursorCheckBox_Checked" Unchecked="AutoExpandonCursorCheckBox_Unchecked">
                        <TextBlock Text="{x:Static prop:Lang.FrameSettings_AutoExpandonCursor}" TextWrapping="Wrap"/>
                    </CheckBox>

                    <CheckBox x:Name="SnapWidthToIconWidth_CheckBox"
                          Checked="SnapWidthToIconWidth_CheckBox_Checked"
                          Unchecked="SnapWidthToIconWidth_CheckBox_Checked"
                           Margin="-11,0,0,0">
                        <TextBlock Text="{x:Static prop:Lang.FrameSettings_SnapWidthToIconWidth}" TextWrapping="Wrap"/>
                    </CheckBox>
                    <CheckBox x:Name="SnapWidthToIconWidth_PlusScrollbarWidth_CheckBox"
                          Checked="SnapWidthToIconWidth_PlusScrollbarWidth_CheckBox_Checked" 
                          Unchecked="SnapWidthToIconWidth_PlusScrollbarWidth_CheckBox_Checked"
                          Margin="14,0,0,0"
                          Visibility="Collapsed">
                        <TextBlock Text="{x:Static prop:Lang.FrameSettings_SnapWidthToIconWidth_PlusScrollbarWidth}" TextWrapping="Wrap"/>
                    </CheckBox>


                </StackPanel>
            </Grid>

        </ScrollViewer>
        <Button x:Name="RevertButton" Content="{x:Static prop:Lang.FrameSettings_RevertButton}"  HorizontalAlignment="Right" Margin="12" Height="30" Click="RevertButton_Click"  VerticalAlignment="Bottom"/>

    </Grid>
