<ui:FluentWindow x:Class="DeskFrame.FrameSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
        xmlns:local="clr-namespace:DeskFrame"
        xmlns:colorpick="clr-namespace:DeskFrame.ColorPicker"
        xmlns:properties="clr-namespace:DeskFrame.Properties;assembly=DeskFrame"
        xmlns:prop="clr-namespace:DeskFrame.Properties"
        ExtendsContentIntoTitleBar="True"
        mc:Ignorable="d"    
        Background="#66232323" 
        WindowStyle="None" 
        ResizeMode="CanResize"
        Height="920" 
        Width="1147">
    <Grid>
        <ui:TitleBar Name="Titlebar" Padding="8,0,0,0" Height="30" CanMaximize="False" ShowMinimize="False" ApplicationTheme="Dark" ShowMaximize="False" CloseClicked="Titlebar_CloseClicked">
            <ui:TitleBar.Title>
                <MultiBinding StringFormat="{}{0}   â€¢   {1}">
                    <Binding Source="{x:Static prop:Lang.FrameSettings_TitleBarText}"/>
                    <Binding Path="Folder"/>
                </MultiBinding>
            </ui:TitleBar.Title>

            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="/ico.png" Margin="0,0,6,0" />
            </ui:TitleBar.Icon>

            <ui:TitleBar.TrailingContent>
                <StackPanel Orientation="Horizontal">
                    <ui:DropDownButton x:Name="ChangeStyleDropDownButton" Content="{x:Static prop:Lang.FrameSettings_ChangeStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="2" Margin="0,0,20,0" Height="30" Padding="10,0,10,0" Click="ChangeStyleDropDownButton_Click" />
                    <ui:Button x:Name="ChangeFolderButton" Content="{x:Static prop:Lang.FrameSettings_ChangeFolder}" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="2" Margin="0,0,10,0" Height="30" Padding="10,0,10,0" Click="ChangeFolderButton_Click"/>
                </StackPanel>
            </ui:TitleBar.TrailingContent>
        </ui:TitleBar>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" Margin="0,30,0,0" >
            <Grid Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="260"/>
                </Grid.ColumnDefinitions>
                <ui:Flyout x:Name="uiFlyout"  Padding="13" IsTabStop="True" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <StackPanel  x:Name="ColorCard" />
                </ui:Flyout>
                <StackPanel Orientation="Vertical" Margin="20,10,10,0" Grid.Column="0">
                    <Label Content="{x:Static prop:Lang.FrameSettings_CategoryMiscellaneous}" Margin="0,0,0,17" Height="50"  FontWeight="Bold" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" >
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.HighlightColorKey}}"/>
                        </Label.Foreground>
                    </Label>


                    <Border CornerRadius="8" BorderThickness="2" Padding="10,10,10,0" Margin="-10,-12,-10,10"  BorderBrush="#19C5C5C5">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="1,1" StartPoint="1,0">
                                <GradientStop Color="#05FFFFFF" Offset="0.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>

                            <StackPanel Orientation="Horizontal" >
                                <CheckBox x:Name="BorderEnabledCheckBox" Margin="-11,0,-5,0" Checked="BorderEnabledCheckBox_Checked"  Unchecked="BorderEnabledCheckBox_Checked"/>
                                <ui:Button x:Name="BorderColorButton"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,7,5,0" Icon="{ui:SymbolIcon Color24}" Padding="-10" Click="BorderColorButton_Click">
                                    <ui:Button.Foreground>
                                        <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFFF5A5A"/>
                                            <GradientStop Color="#FF5A5AFF" Offset="0.8"/>
                                            <GradientStop Color="#FF5AFF5A" Offset="0.4"/>
                                        </LinearGradientBrush>
                                    </ui:Button.Foreground>
                                </ui:Button>
                                <Label Content="{x:Static prop:Lang.FrameSettings_BorderColor}"  VerticalAlignment="Center"/>
                            </StackPanel>
                            <Grid>
                                <Rectangle  Width="20" Height="20" RadiusX="5"   IsHitTestVisible="False" Panel.ZIndex="2" RadiusY="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,16,0">
                                    <Rectangle.Fill>
                                        <VisualBrush Stretch="Uniform" TileMode="Tile" Viewport="0,0,8,8" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" >
                                            <VisualBrush.Visual>
                                                <Canvas Width="8" Height="8">
                                                    <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="0" Canvas.Top="0"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="4" Canvas.Top="0"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="0" Canvas.Top="4"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="4" Canvas.Top="4"/>
                                                </Canvas>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <Rectangle Width="20" Height="20" RadiusX="5" RadiusY="5" Panel.ZIndex="4344"
                               Fill="{Binding Foreground, ElementName=BorderColorTextBoxIcon}" 
                               HorizontalAlignment="Right" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,7,16,0"/>

                                <ui:TextBox x:Name="BorderColorTextBox" IconPlacement="Right" Margin="0,0,0,20" TextChanged="TextChangedHandler">
                                    <ui:TextBox.Icon>
                                        <ui:SymbolIcon Symbol="Square20" Filled="True" FontSize="30" 
                                       x:Name="BorderColorTextBoxIcon"
                                       Cursor="Hand"
                                       MouseUp="BorderColorTextBoxIcon_MouseUp" 
                                       />
                                    </ui:TextBox.Icon>
                                </ui:TextBox>
                            </Grid>


                            <StackPanel Orientation="Horizontal" Margin="0,-2,0,0">
                                <CheckBox x:Name="ActiveBorderEnabledCheckBox" 
                                      Checked="ActiveBorderEnabledCheckBox_Checked"
                                      Unchecked="ActiveBorderEnabledCheckBox_Checked"
                                      Margin="-11,0,-5,0" />
                                <ui:Button x:Name="ActiveBorderColorButton"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,7,5,0" Icon="{ui:SymbolIcon Color24}" Padding="-10" Click="ActiveBorderColorButton_Click">
                                    <ui:Button.Foreground>
                                        <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFFF5A5A"/>
                                            <GradientStop Color="#FF5A5AFF" Offset="0.8"/>
                                            <GradientStop Color="#FF5AFF5A" Offset="0.4"/>
                                        </LinearGradientBrush>
                                    </ui:Button.Foreground>
                                </ui:Button>
                                <Label Content="{x:Static prop:Lang.FrameSettings_ActiveColor}"  VerticalAlignment="Center" />
                            </StackPanel>
                            <Grid>
                                <Rectangle  Width="20" Height="20" RadiusX="5"   IsHitTestVisible="False" Panel.ZIndex="2" RadiusY="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,16,0">
                                    <Rectangle.Fill>
                                        <VisualBrush Stretch="Uniform" TileMode="Tile" Viewport="0,0,8,8" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" >
                                            <VisualBrush.Visual>
                                                <Canvas Width="8" Height="8">
                                                    <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="0" Canvas.Top="0"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="4" Canvas.Top="0"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="0" Canvas.Top="4"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="4" Canvas.Top="4"/>
                                                </Canvas>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <Rectangle Width="20" Height="20" RadiusX="5" RadiusY="5" Panel.ZIndex="4344"
                                       Fill="{Binding Foreground, ElementName=ActiveBorderColorTextBoxIcon}" 
                                       HorizontalAlignment="Right" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,7,16,0"/>

                                <ui:TextBox x:Name="ActiveBorderColorTextBox"  IconPlacement="Right" Margin="0,0,0,20" TextChanged="TextChangedHandler">
                                    <ui:TextBox.Icon>
                                        <ui:SymbolIcon x:Name="ActiveBorderColorTextBoxIcon"
                                                   Symbol="Square20" Filled="True" FontSize="30"
                                                   Cursor="Hand" 
                                                   MouseUp="ActiveBorderColorTextBoxIcon_MouseUp" 
                                                    />
                                    </ui:TextBox.Icon>
                                </ui:TextBox>
                            </Grid>

                        </StackPanel>
                    </Border>



                    <!--<Separator VerticalAlignment="Center" Margin="-5,-5,-5,5"/>-->

                    <Border CornerRadius="8" BorderThickness="2" Padding="10,10,10,0" Margin="-10,10,-10,10"  BorderBrush="#19C5C5C5">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="1,1" StartPoint="1,0">
                                <GradientStop Color="#05FFFFFF" Offset="0.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <ui:Button  x:Name="FilesBackgroundColorButton" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,1,5,0" Icon="{ui:SymbolIcon Color24}" Padding="-10" Click="FilesBackgroundColorButton_Click">
                                    <ui:Button.Foreground>
                                        <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFFF5A5A"/>
                                            <GradientStop Color="#FF5A5AFF" Offset="0.8"/>
                                            <GradientStop Color="#FF5AFF5A" Offset="0.4"/>
                                        </LinearGradientBrush>
                                    </ui:Button.Foreground>
                                </ui:Button>
                                <Label Content="{x:Static prop:Lang.FrameSettings_BackgroundColor}" Height="30"/>
                            </StackPanel>
                            <Grid>
                                <Rectangle  Width="20" Height="20" RadiusX="5"   IsHitTestVisible="False" Panel.ZIndex="2" RadiusY="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,16,0">
                                    <Rectangle.Fill>
                                        <VisualBrush Stretch="Uniform" TileMode="Tile" Viewport="0,0,8,8" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" >
                                            <VisualBrush.Visual>
                                                <Canvas Width="8" Height="8">
                                                    <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="0" Canvas.Top="0"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="4" Canvas.Top="0"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="0" Canvas.Top="4"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="4" Canvas.Top="4"/>
                                                </Canvas>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <Rectangle Width="20" Height="20" RadiusX="5" RadiusY="5" Panel.ZIndex="4344"
                               Fill="{Binding Foreground, ElementName=ListViewBackgroundColorTextBoxIcon}" 
                               HorizontalAlignment="Right" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,7,16,0"/>

                                <ui:TextBox x:Name="ListViewBackgroundColorTextBox"  IconPlacement="Right" PlaceholderText="#0C000000" Margin="0,0,0,20" TextChanged="TextChangedHandler">
                                    <ui:TextBox.Icon>
                                        <ui:SymbolIcon Symbol="Square20" Filled="True" FontSize="30" 
                                           x:Name="ListViewBackgroundColorTextBoxIcon" 
                                           Cursor="Hand"
                                           MouseUp="ListViewBackgroundColorTextBoxIcon_MouseUp" />
                                    </ui:TextBox.Icon>
                                </ui:TextBox>
                            </Grid>


                            <StackPanel Orientation="Horizontal" Margin="0,-2,0,0">
                                <CheckBox x:Name="ActiveBackgroundEnabledCheckBox" 
                                      Checked="ActiveBackgroundEnabledCheckBox_Checked"
                                      Unchecked="ActiveBackgroundEnabledCheckBox_Checked"
                                      Margin="-11,0,-5,0" />
                                <ui:Button x:Name="ActiveBackgroundColorButton" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,7,5,0" Icon="{ui:SymbolIcon Color24}" Padding="-10" Click="ActiveBackgroundColorButton_Click">
                                    <ui:Button.Foreground>
                                        <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFFF5A5A"/>
                                            <GradientStop Color="#FF5A5AFF" Offset="0.8"/>
                                            <GradientStop Color="#FF5AFF5A" Offset="0.4"/>
                                        </LinearGradientBrush>
                                    </ui:Button.Foreground>
                                </ui:Button>
                                <Label Content="{x:Static prop:Lang.FrameSettings_ActiveColor}"  VerticalAlignment="Center" />
                            </StackPanel>
                            <Grid>
                                <Rectangle  Width="20" Height="20" RadiusX="5"   IsHitTestVisible="False" Panel.ZIndex="2" RadiusY="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,16,0">
                                    <Rectangle.Fill>
                                        <VisualBrush Stretch="Uniform" TileMode="Tile" Viewport="0,0,8,8" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" >
                                            <VisualBrush.Visual>
                                                <Canvas Width="8" Height="8">
                                                    <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="0" Canvas.Top="0"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="4" Canvas.Top="0"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="0" Canvas.Top="4"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="4" Canvas.Top="4"/>
                                                </Canvas>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <Rectangle Width="20" Height="20" RadiusX="5" RadiusY="5" Panel.ZIndex="4344"
                                       Fill="{Binding Foreground, ElementName=ActiveBackgroundColorTextBoxIcon}" 
                                       HorizontalAlignment="Right" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,7,16,0"/>

                                <ui:TextBox x:Name="ActiveBackgroundColorTextBox"  IconPlacement="Right" Margin="0,0,0,20" TextChanged="TextChangedHandler">
                                    <ui:TextBox.Icon>
                                        <ui:SymbolIcon x:Name="ActiveBackgroundColorTextBoxIcon"
                            Symbol="Square20" Filled="True" FontSize="30"
                            Cursor="Hand" 
                            MouseUp="ActiveBackgroundColorTextBoxIcon_MouseUp" 
                             />
                                    </ui:TextBox.Icon>
                                </ui:TextBox>
                            </Grid>
                        </StackPanel>
                    </Border>




                    <Label Content="{x:Static prop:Lang.FrameSettings_ShowOnVirtualDesktopLabel}" Height="30" Margin="0,-2,0,0"/>
                    <ui:TextBox x:Name="ShowOnVirtualDesktopTextBox" PlaceholderText="{x:Static prop:Lang.FrameSettings_ShowOnVirtualDesktopPlaceHolder}" Margin="0,0,0,20" TextChanged="TextChangedHandler"/>

                    <StackPanel Orientation="Horizontal">
                        <Label Content="{x:Static prop:Lang.FrameSettings_AnimationSpeed}" Height="30" Margin="0,0,0,0"/>
                        <Label x:Name="AnimationSpeedLabel" Content="0.0" Height="30" Margin="5,00,0,0" Foreground="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" FontWeight="Bold"/>
                    </StackPanel>
                    <Slider x:Name="AnimationSpeedSlider" Width="200" TickPlacement="TopLeft" TickFrequency="1" Minimum="0" Maximum="10" ValueChanged="Slider_ValueChanged" IsSnapToTickEnabled="True"/>



                    <CheckBox x:Name="CheckFolderSizeCheckBox" Margin="-11,0,0,0" Checked="CheckFolderSizeCheckBox_Checkked" Unchecked="CheckFolderSizeCheckBox_Uncheckked">
                        <TextBlock Text="{x:Static prop:Lang.FrameSettings_CheckFolderSize}" TextWrapping="Wrap"/>
                    </CheckBox>

                    <CheckBox x:Name="FolderOpenInsideFrameCheckBox" Margin="-11,0,0,0" Checked="FolderOpenInsideFrameCheckBox_Checked" Unchecked="FolderOpenInsideFrameCheckBox_Unchecked">
                        <TextBlock Text="{x:Static prop:Lang.FrameSettings_FolderOpenInsideFrame}" TextWrapping="Wrap"/>
                    </CheckBox>


                </StackPanel>
                <ui:Image x:Name="KofiButtonImage" VerticalAlignment="Bottom"
                       Source="/Icon/support_me_on_kofi_badge_dark.png" 
                       RenderOptions.BitmapScalingMode="Fant" Height="60"
                       Margin="14"
                       HorizontalAlignment="Left"
                       Cursor="Hand" MouseUp="KofiButtonImage_MouseUp"/>

                <Separator HorizontalAlignment="Center"  Grid.Column="1" Margin="0,20,0,20"/>

                <StackPanel  Orientation="Vertical" Margin="10,10,10,0" Grid.Column="2">
                    <Label Content="{x:Static prop:Lang.FrameSettings_CategoryTitleBar}" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Margin="0,0,0,20" Height="50"  FontWeight="Bold" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" />

                    <StackPanel Orientation="Horizontal">
                        <ui:Button x:Name="TitleBarColorButton"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,1,5,0" Icon="{ui:SymbolIcon Color24}" Padding="-10" Click="TitleBarColorButton_Click">
                            <ui:Button.Foreground>
                                <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFFF5A5A"/>
                                    <GradientStop Color="#FF5A5AFF" Offset="0.8"/>
                                    <GradientStop Color="#FF5AFF5A" Offset="0.4"/>
                                </LinearGradientBrush>
                            </ui:Button.Foreground>
                        </ui:Button>
                        <Label Content="{x:Static prop:Lang.FrameSettings_BackgroundColor}" Height="30"/>
                    </StackPanel>

                    <Grid>
                        <Rectangle  Width="20" Height="20" RadiusX="5"   IsHitTestVisible="False" Panel.ZIndex="2" RadiusY="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,16,0">
                            <Rectangle.Fill>
                                <VisualBrush Stretch="Uniform" TileMode="Tile" Viewport="0,0,8,8" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" >
                                    <VisualBrush.Visual>
                                        <Canvas Width="8" Height="8">
                                            <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="0" Canvas.Top="0"/>
                                            <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="4" Canvas.Top="0"/>
                                            <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="0" Canvas.Top="4"/>
                                            <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="4" Canvas.Top="4"/>
                                        </Canvas>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Rectangle.Fill>
                        </Rectangle>

                        <Rectangle Width="20" Height="20" RadiusX="5" RadiusY="5" Panel.ZIndex="4344"
                               Fill="{Binding Foreground, ElementName=TitleBarColorTextBoxIcon}" 
                               HorizontalAlignment="Right" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,7,16,0"/>

                        <ui:TextBox x:Name="TitleBarColorTextBox" Margin="0,0,0,20" PlaceholderText="#0C000000" IconPlacement="Right" TextChanged="TextChangedHandler">
                            <ui:TextBox.Icon>
                                <ui:SymbolIcon Symbol="Square20" Filled="True" FontSize="30" 
                                       x:Name="TitleBarColorTextBoxIcon"
                                       Cursor="Hand"       
                                       MouseUp="TitleBarColorTextBoxIcon_MouseUp" />
                            </ui:TextBox.Icon>
                        </ui:TextBox>
                    </Grid>





                    <Border CornerRadius="8" BorderThickness="2"  Padding="10,10,10,0" Margin="-10,10,-10,10"  BorderBrush="#19C5C5C5">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="1,1" StartPoint="1,0">
                                <GradientStop Color="#05FFFFFF" Offset="0.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>



                            <StackPanel Orientation="Horizontal">
                                <ui:Button x:Name="TitleTextColorButton" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,1,5,0" Icon="{ui:SymbolIcon Color24}" Padding="-10" Click="TitleTextColorButton_Click">
                                    <ui:Button.Foreground>
                                        <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFFF5A5A"/>
                                            <GradientStop Color="#FF5A5AFF" Offset="0.8"/>
                                            <GradientStop Color="#FF5AFF5A" Offset="0.4"/>
                                        </LinearGradientBrush>
                                    </ui:Button.Foreground>
                                </ui:Button>
                                <Label Content="{x:Static prop:Lang.FrameSettings_TextColor}" Height="30"/>
                            </StackPanel>

                            <Grid>
                                <Rectangle  Width="20" Height="20" RadiusX="5"   IsHitTestVisible="False" Panel.ZIndex="2" RadiusY="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,16,0">
                                    <Rectangle.Fill>
                                        <VisualBrush Stretch="Uniform" TileMode="Tile" Viewport="0,0,8,8" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" >
                                            <VisualBrush.Visual>
                                                <Canvas Width="8" Height="8">
                                                    <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="0" Canvas.Top="0"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="4" Canvas.Top="0"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="0" Canvas.Top="4"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="4" Canvas.Top="4"/>
                                                </Canvas>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <Rectangle Width="20" Height="20" RadiusX="5" RadiusY="5" Panel.ZIndex="4344"
                               Fill="{Binding Foreground, ElementName=TitleTextColorTextBoxIcon}" 
                               HorizontalAlignment="Right" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,7,16,0"/>

                                <ui:TextBox x:Name="TitleTextColorTextBox" PlaceholderText="#FFFFFF" Margin="0,0,0,20" IconPlacement="Right" TextChanged="TextChangedHandler">
                                    <ui:TextBox.Icon>
                                        <ui:SymbolIcon Symbol="Square20" Filled="True" FontSize="30"
                                           x:Name="TitleTextColorTextBoxIcon"
                                           Cursor="Hand"
                                           MouseUp="TitleTextColorTextBoxIcon_MouseUp" />
                                    </ui:TextBox.Icon>
                                </ui:TextBox>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Margin="0,-2,0,0">
                                <CheckBox x:Name="ActiveTitleTextEnabledCheckBox" 
                              Checked="ActiveTitleTextEnabledCheckBox_Checked"
                              Unchecked="ActiveTitleTextEnabledCheckBox_Checked"
                              Margin="-11,0,-5,0" />
                                <ui:Button x:Name="ActiveTitleTextColorButton"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,7,5,0" Icon="{ui:SymbolIcon Color24}" Padding="-10" Click="ActiveTitleTextColorButton_Click">
                                    <ui:Button.Foreground>
                                        <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFFF5A5A"/>
                                            <GradientStop Color="#FF5A5AFF" Offset="0.8"/>
                                            <GradientStop Color="#FF5AFF5A" Offset="0.4"/>
                                        </LinearGradientBrush>
                                    </ui:Button.Foreground>
                                </ui:Button>
                                <Label Content="{x:Static prop:Lang.FrameSettings_ActiveColor}"  VerticalAlignment="Center" />
                            </StackPanel>
                            <Grid>
                                <Rectangle  Width="20" Height="20" RadiusX="5"
                                        IsHitTestVisible="False" Panel.ZIndex="2" RadiusY="5" 
                                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,16,0">
                                    <Rectangle.Fill>
                                        <VisualBrush Stretch="Uniform" TileMode="Tile" Viewport="0,0,8,8" 
                                                 ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" >
                                            <VisualBrush.Visual>
                                                <Canvas Width="8" Height="8">
                                                    <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="0" Canvas.Top="0"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="4" Canvas.Top="0"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="0" Canvas.Top="4"/>
                                                    <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="4" Canvas.Top="4"/>
                                                </Canvas>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <Rectangle Width="20" Height="20" RadiusX="5" RadiusY="5" Panel.ZIndex="4344"
                               Fill="{Binding Foreground, ElementName=ActiveTitleTextColorTextBoxIcon}" 
                               HorizontalAlignment="Right" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,7,16,0"/>

                                <ui:TextBox x:Name="ActiveTitleTextColorTextBox"  IconPlacement="Right" Margin="0,0,0,20" TextChanged="TextChangedHandler">
                                    <ui:TextBox.Icon>
                                        <ui:SymbolIcon x:Name="ActiveTitleTextColorTextBoxIcon"
                               Symbol="Square20" Filled="True" FontSize="30"
                               Cursor="Hand" 
                               MouseUp="ActiveTitleTextColorTextBoxIcon_MouseUp" 
                                />
                                    </ui:TextBox.Icon>
                                </ui:TextBox>
                            </Grid>


                        </StackPanel>
                    </Border>



                    <Label Content="{x:Static prop:Lang.FrameSettings_TitleBarTextText}"  Margin="0,0,0,0" Height="30"/>
