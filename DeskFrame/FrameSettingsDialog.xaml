                        <CheckBox x:Name="HideTitleBarIconsWhenInactive_CheckBox" Margin="-11,0,0,20" Checked="HideTitleBarIconsWhenInactive_CheckBox_Checked" Unchecked="HideTitleBarIconsWhenInactive_CheckBox_Checked">
                            <TextBlock Text="{x:Static prop:Lang.FrameSettings_HideTitleBarIconsWhenInactive}" TextWrapping="Wrap"/>
                        </CheckBox>

                    </StackPanel>

                </StackPanel>
                <Separator HorizontalAlignment="Center"  Grid.Column="3" Margin="0,20,0,20"/>

