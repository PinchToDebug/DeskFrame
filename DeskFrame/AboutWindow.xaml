<ui:FluentWindow x:Class="DeskFrame.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:DeskFrame"
        mc:Ignorable="d"
        ExtendsContentIntoTitleBar="True"
        WindowStyle="None"
        Background="#66232323" 
        Foreground="White"
        ResizeMode="NoResize"
        Title="About DeskFrame"
        MinHeight="0"
        MinWidth="0"
        Height="265"
        Width="230">

    <Grid>

        <StackPanel>

            <ui:TitleBar Name="Titlebar" Padding="8,0,0,0" Height="30" CanMaximize="False"
                         ShowMinimize="False" ApplicationTheme="Dark" ShowMaximize="False" />

            <StackPanel HorizontalAlignment="Center">

                <Image Source="/ico.png" Height="75" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                <TextBlock Text="DeskFrame"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                <TextBlock x:Name="VersionTextBlock"
                           Margin="0,4,0,0"
                           FontSize="13"
                           Opacity="0.75"
                           HorizontalAlignment="Center"/>

                <Separator Margin="0,8" Width="auto" />

             
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="© 2026 "
                               HorizontalAlignment="Center"
                               Opacity="0.75"/>
                    <TextBlock x:Name="Profile_TextBlock" Text="PinchToDebug"
                               HorizontalAlignment="Center" 
                               Opacity="0.75"
                               Cursor="Hand"
                               MouseEnter="Profile_TextBlock_MouseEnter"
                               MouseLeave="Profile_TextBlock_MouseLeave"
                               MouseLeftButtonUp="Profile_TextBlock_MouseLeftButtonUp">
                        <TextBlock.ToolTip>
                            <ToolTip MaxWidth="400" Placement="Top" HorizontalAlignment="Center" >
                                <TextBlock Text="https://github.com/PinchToDebug" Margin="0" Padding="0" />
                            </ToolTip>
                        </TextBlock.ToolTip>
                    </TextBlock>
                </StackPanel>
                
                <TextBlock Text="Licensed under the MIT License"
                           Margin="0,4,0,0"
                           FontSize="12"
                           Opacity="0.75"
                           HorizontalAlignment="Center"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</ui:FluentWindow>